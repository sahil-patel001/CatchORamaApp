# ============================================
# PRODUCT ECOSYSTEM ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and update the values
# Generated on: 2025-09-07T07:20:31.034Z


# Server Configuration
# Application environment
# Allowed values: development, production, test
NODE_ENV=development

# Server port number
# PORT=5000

# API version prefix
# API_VERSION=v1


# Database Configuration
# MongoDB connection URI for main database
MONGODB_URI=

# MongoDB connection URI for test database
# MONGODB_TEST_URI=


# Authentication Configuration
# JWT secret key for token signing
JWT_SECRET=

# JWT token expiration time
# JWT_EXPIRES_IN=7d


# CORS Configuration
# Comma-separated list of allowed CORS origins
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000


# Rate Limiting
# Rate limit window in milliseconds
# RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per rate limit window
# RATE_LIMIT_MAX_REQUESTS=100


# WebSocket Configuration
# Enable WebSocket real-time notifications
# WEBSOCKET_NOTIFICATIONS_ENABLED=true

# Comma-separated list of allowed WebSocket CORS origins
# WEBSOCKET_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# WebSocket ping timeout in milliseconds
# WEBSOCKET_PING_TIMEOUT=60000

# WebSocket ping interval in milliseconds
# WEBSOCKET_PING_INTERVAL=25000


# Notification System
# Enable notification system
# NOTIFICATIONS_ENABLED=true

# Enable email notifications
# EMAIL_NOTIFICATIONS_ENABLED=true

# Email service provider
# Allowed values: nodemailer, sendgrid, aws-ses
# EMAIL_SERVICE=nodemailer


# NodeMailer Configuration
# SMTP host for NodeMailer
# NODEMAILER_HOST=smtp.gmail.com

# SMTP port for NodeMailer
# NODEMAILER_PORT=587

# Use secure connection for NodeMailer
# NODEMAILER_SECURE=false

# SMTP username for NodeMailer
# Required when: {"EMAIL_NOTIFICATIONS_ENABLED":true,"EMAIL_SERVICE":"nodemailer"}
# NODEMAILER_USER=

# SMTP password for NodeMailer
# Required when: {"EMAIL_NOTIFICATIONS_ENABLED":true,"EMAIL_SERVICE":"nodemailer"}
# NODEMAILER_PASS=

# From name for NodeMailer emails
# NODEMAILER_FROM_NAME=Product Ecosystem

# From email for NodeMailer
# Required when: {"EMAIL_NOTIFICATIONS_ENABLED":true,"EMAIL_SERVICE":"nodemailer"}
# NODEMAILER_FROM_EMAIL=


# SendGrid Configuration
# SendGrid API key
# Required when: {"EMAIL_NOTIFICATIONS_ENABLED":true,"EMAIL_SERVICE":"sendgrid"}
# SENDGRID_API_KEY=

# From email for SendGrid
# Required when: {"EMAIL_NOTIFICATIONS_ENABLED":true,"EMAIL_SERVICE":"sendgrid"}
# SENDGRID_FROM_EMAIL=

# From name for SendGrid emails
# SENDGRID_FROM_NAME=Product Ecosystem


# AWS SES Configuration
# AWS SES region
# AWS_SES_REGION=us-east-1

# AWS SES access key ID
# Required when: {"EMAIL_NOTIFICATIONS_ENABLED":true,"EMAIL_SERVICE":"aws-ses"}
# AWS_SES_ACCESS_KEY_ID=

# AWS SES secret access key
# Required when: {"EMAIL_NOTIFICATIONS_ENABLED":true,"EMAIL_SERVICE":"aws-ses"}
# AWS_SES_SECRET_ACCESS_KEY=

# From email for AWS SES
# Required when: {"EMAIL_NOTIFICATIONS_ENABLED":true,"EMAIL_SERVICE":"aws-ses"}
# AWS_SES_FROM_EMAIL=

# From name for AWS SES emails
# AWS_SES_FROM_NAME=Product Ecosystem


# Email Template Configuration
# Directory for email templates
# EMAIL_TEMPLATE_DIR=./templates/emails

# Logo URL for email templates
# EMAIL_LOGO_URL=

# Company name for email templates
# EMAIL_COMPANY_NAME=Product Ecosystem

# Support email address
# EMAIL_SUPPORT_EMAIL=support@yourdomain.com

# Company address for email templates
# EMAIL_COMPANY_ADDRESS=


# Notification Triggers
# Enable low stock notifications
# LOW_STOCK_NOTIFICATIONS_ENABLED=true

# Enable new order notifications
# NEW_ORDER_NOTIFICATIONS_ENABLED=true

# Enable cubic volume notifications
# CUBIC_VOLUME_NOTIFICATIONS_ENABLED=true

# Cubic volume threshold in kg for alerts
# CUBIC_VOLUME_THRESHOLD_KG=32


# Cleanup Configuration
# Number of days to retain notifications
# NOTIFICATION_RETENTION_DAYS=90

# Interval in hours for notification cleanup
# NOTIFICATION_CLEANUP_INTERVAL_HOURS=24

